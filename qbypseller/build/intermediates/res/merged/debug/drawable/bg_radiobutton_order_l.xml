    <item android:state_checked="false"><shape>
            <corners android:bottomLeftRadius="@dimen/common_bg_shape_radius" android:topLeftRadius="@dimen/common_bg_shape_radius" />

            <stroke android:color="@color/white" />

            <size android:width="1dp" />

            <solid android:color="@color/yellow_ww" />
