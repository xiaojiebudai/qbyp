<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_operation_height"
        android:background="@color/yellow_ww"
       >

        <RelativeLayout
            android:id="@+id/rl_head_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="50dp" >

            <TextView
                android:id="@+id/tv_head_left"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/rg_store_setting"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"

            android:background="@drawable/bg_white_shape"
            android:checkedButton="@+id/rbtn_left"
            android:orientation="horizontal"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/rb_store_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_radiobutton_order_l"
                android:button="@null"

                android:gravity="center"
                android:text="@string/store_info"
                android:textSize="@dimen/text_xlarge_size"
                android:textColor="@color/text_checked_yellow_white" />

            <RadioButton
                android:id="@+id/rb_store_res"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_radiobutton_order_r"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/text_xlarge_size"
                android:text="@string/store_res"
                android:textColor="@color/text_checked_yellow_white" />
        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </RelativeLayout>

</LinearLayout>