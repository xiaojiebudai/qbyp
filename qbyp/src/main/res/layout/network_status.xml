<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/yellow_ww"
    android:gravity="center"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="40dp">
<TextView
    android:layout_width="wrap_content"
    android:text="@string/net_error"
    android:textColor="@color/red_b"
    android:id="@+id/tv_net_info"
    android:layout_weight="1"
    android:textSize="@dimen/text_large_size"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/goto_setting"
        android:textColor="@color/green"
        android:padding="5dp"
        android:id="@+id/tv_net_setting"
        android:background="@drawable/bg_white_shape"
        android:textSize="@dimen/text_normal_size"
        android:layout_height="wrap_content" />
</LinearLayout>