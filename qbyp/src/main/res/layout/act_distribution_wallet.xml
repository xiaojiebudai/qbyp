<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bg_shade_yellow"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:background="@drawable/bg_shade_yellow" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/fake_status_bar1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/bg_shade_yellow"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/head_operation_height"
                android:clipToPadding="true">

                <RelativeLayout
                    android:id="@+id/rl_head_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="50dp">

                    <TextView
                        android:id="@+id/tv_head_left"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_head_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/my_goods_money"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_size" />

            <TextView
                android:id="@+id/tv_money_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_white_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_ub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_select_bar_height"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/click_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/user_earningsub_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/ub"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/text_normal_size" />

                    <TextView
                        android:id="@+id/tv_ub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/yellow_ww"
                        android:textSize="@dimen/text_normal_size" />

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_select_bar_height"
                    android:background="@drawable/click_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/user_earningswithdraw_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/withdraw"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/text_normal_size" />

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_withdraw_des"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_select_bar_height"
                    android:background="@drawable/click_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                   >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_earningswithdraw_detail_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/tixian_des"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/text_normal_size" />

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jifen_des"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_select_bar_height"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/click_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/user_earningsjf_detail_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/integral_des"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/text_normal_size" />

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_shape"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_select_bar_height"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:textSize="@dimen/text_normal_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_freeze"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/user_earnings_roundbg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:text="@string/freezing"
                            android:textColor="@color/text_gray_s"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="@dimen/text_xxlarge_size" />

                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll_1ji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_yijijifen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/base_rate"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView
                            android:id="@+id/tv_base_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/yellow_ww"
                            android:textSize="@dimen/text_large_size" />

                    </LinearLayout>

                    <View style="@style/cutline_fine_v" />

                    <LinearLayout
                        android:id="@+id/ll_2ji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_erjijifen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/un_free"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView
                            android:id="@+id/tv_money_wait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/yellow_ww"
                            android:textSize="@dimen/text_large_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>