<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shape"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_sex_with_colon"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/text_xlarge_size" />

    <LinearLayout
         android:id="@+id/ll_woman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_woman"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shangpinzhuangtai_nor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/woman"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_xlarge_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_man"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shangpinzhuangtai_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/man"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_xlarge_size" />
    </LinearLayout>

</LinearLayout>