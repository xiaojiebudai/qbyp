<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:daemon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="80dp" >
    <RelativeLayout
        android:id="@+id/ll_banner_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_homepage_height"
        android:orientation="vertical">

        <cn.net.chenbao.qbyp.view.HorizontalInnerViewPager
            android:id="@+id/vp_imgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></cn.net.chenbao.qbyp.view.HorizontalInnerViewPager>

        <cn.net.chenbao.qbyp.view.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:padding="5dp" />
    </RelativeLayout>
</LinearLayout>