<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/head_operation_height"
    android:background="@color/yellow_ww"
    android:clipToPadding="true"
  >

    <RelativeLayout
        android:id="@+id/rl_head_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="50dp" >

        <TextView
            android:id="@+id/tv_head_left"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_head_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />
    <RelativeLayout
        android:id="@+id/rl_head_right_func"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/rl_head_right"
        android:minWidth="50dp" >

        <TextView
            android:id="@+id/tv_head_right_func"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_height="@dimen/head_image_size" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_head_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:minWidth="50dp" >

        <TextView
            android:id="@+id/tv_head_right"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="@dimen/head_image_size" />
    </RelativeLayout>

</RelativeLayout>