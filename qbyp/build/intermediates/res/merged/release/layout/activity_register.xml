<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/head_operation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_phone_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:hint="@string/please_input_phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textColorHint="@color/text_c1"
            android:textSize="@dimen/text_large_size" />
    </LinearLayout>

    <View style="@style/cutline_fine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_ver_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:hint="@string/please_input_verification_code"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textColorHint="@color/text_c1"
            android:textSize="@dimen/text_large_size" />

        <TextView
            android:id="@+id/tv_get_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_ver_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/get_verification_code"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/text_large_size" />
    </LinearLayout>

    <View style="@style/cutline_fine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_psw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/input_password_limit2"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textColorHint="@color/text_c1"
            android:textSize="@dimen/text_large_size" />

        <LinearLayout
            android:id="@+id/ll_hide_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/iv_hide_show"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/easy" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/cutline_fine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_recomm_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:hint="@string/input_recommend_code"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:textColorHint="@color/text_c1"
            android:textSize="@dimen/text_large_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingTop="20dp">

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:button="@drawable/bg_check_box_register" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/register_tips"
            android:textColor="@color/text_f7"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:id="@+id/tv_server_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/server_protocol"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/text_normal_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_btn_comm_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xlarge_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_have_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:text="@string/have_username_login"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/text_normal_size" />
    </RelativeLayout>

</LinearLayout>