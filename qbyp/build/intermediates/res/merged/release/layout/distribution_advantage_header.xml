<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ll_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.net.chenbao.qbyp.view.HorizontalInnerViewPager
                android:id="@+id/vp_imgs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></cn.net.chenbao.qbyp.view.HorizontalInnerViewPager>

            <cn.net.chenbao.qbyp.view.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:padding="5dp" />
        </RelativeLayout>

        <cn.net.chenbao.qbyp.view.ListViewForScrollView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_bg"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/gray_bg"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:smoothScrollbar="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/youfenx_product_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distribution_home_sub_title"
                android:textColor="@color/red_b"
                android:textSize="@dimen/text_large_size" />
        </LinearLayout>
</LinearLayout>