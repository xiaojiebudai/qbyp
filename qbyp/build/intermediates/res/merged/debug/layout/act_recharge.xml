<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_operation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_banner_container"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical">

                <cn.net.chenbao.qbyp.view.HorizontalInnerViewPager
                    android:id="@+id/vp_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></cn.net.chenbao.qbyp.view.HorizontalInnerViewPager>

                <cn.net.chenbao.qbyp.view.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:padding="5dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_f7"
                    android:textSize="@dimen/text_large_size" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_s"
                    android:textSize="@dimen/text_large_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/recharge_money"
                    android:textColor="@color/text_gray_s"
                    android:textSize="@dimen/text_large_size" />

                <RadioGroup
                    android:id="@+id/rg_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:padding="10dp">

                    <RadioButton
                        android:id="@+id/rb_0"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_red_white_shape"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/recharge_20000"
                        android:textColor="@color/rb_white_black_checked" />

                    <RadioButton
                        android:id="@+id/rb_1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_red_white_shape"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/recharge_10000"
                        android:textColor="@color/rb_white_black_checked" />

                    <RadioButton
                        android:id="@+id/rb_2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_red_white_shape"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/recharge_1000"
                        android:textColor="@color/rb_white_black_checked" />
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/recharge_give_colon"
                    android:textColor="@color/text_gray_s"
                    android:textSize="@dimen/text_large_size" />

                <View style="@style/cutline_fine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tv_relevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/san"
                            android:textColor="@color/text_f7"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/immediately_upgrade"
                            android:textColor="@color/text_gray_s"
                            android:textSize="@dimen/text_normal_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_quyu"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/area_agency"
                            android:textColor="@color/text_f7"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/front_100_give"
                            android:textColor="@color/text_gray_s"
                            android:textSize="@dimen/text_normal_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/private_integral"
                            android:textColor="@color/text_f7"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView

                            android:id="@+id/tv_jifen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/integral_20000"
                            android:textColor="@color/text_gray_s"
                            android:textSize="@dimen/text_normal_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/promote_qualification"
                            android:textColor="@color/text_f7"
                            android:textSize="@dimen/text_normal_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/own_my_team"
                            android:textColor="@color/text_gray_s"
                            android:textSize="@dimen/text_normal_size" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/bt_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_select_bar_height"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_yellow_shap_no_r"
                android:text="@string/immediately_recharge"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/recharge_yue_tip"
                android:textColor="@color/text_gray_s"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>