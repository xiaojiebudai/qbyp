<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_operation" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="41dp"
        android:src="@drawable/user_file_ok_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/pay_certificate_commit_ok"
        android:textColor="@color/text_f7"
        android:textSize="@dimen/text_large_size" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_b3"
        android:textSize="@dimen/text_normal_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_go_person_center"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_yellow_shap_no_r"
            android:gravity="center"
            android:text="@string/go_person_center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:id="@+id/btn_go_order_list"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/bg_yellow_white_shape"
            android:gravity="center"
            android:text="@string/go_order_list"
            android:textColor="@color/yellow_ww"
            android:textSize="@dimen/text_normal_size" />
    </LinearLayout>
</LinearLayout>