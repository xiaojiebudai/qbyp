<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_f7"
            android:textSize="@dimen/text_large_size" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_f7"
            android:textSize="@dimen/text_large_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/address_gray" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textColor="@color/text_f7"
            android:textSize="@dimen/text_normal_size" />
    </LinearLayout>

    <View
        style="@style/cutline_fine"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_select_bar_height"
       >

        <ImageView
            android:id="@+id/check"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_nor_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/check"
            android:text="@string/set_default_address"
            android:textColor="@color/text_f7"      android:layout_centerVertical="true"
            android:textSize="@dimen/text_normal_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/edit_small"
                android:drawablePadding="3dp"
                android:text="@string/edit"
                android:gravity="center"
                android:textColor="@color/text_f7"
                android:textSize="@dimen/text_large_size" />

            <View
                style="@style/cutline_fine_v"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/tv_delete"
                android:drawablePadding="3dp"
                android:text="@string/delete"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/delete_samll"
                android:textColor="@color/text_f7"
                android:textSize="@dimen/text_large_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>