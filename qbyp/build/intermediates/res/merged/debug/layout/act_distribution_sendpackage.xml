<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_operation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/choice_wuliu_company"
        android:textSize="@dimen/text_normal_size" />

    <LinearLayout
        android:id="@+id/ll_logistics_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_select_bar_height"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_logistics_company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/please_choice_wuliu_company"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_normal_size" />

        <ImageView
            android:layout_width="@dimen/common_select_bar_height"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/arrow_down" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/edit_wuliu_No" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_select_bar_height"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ll_logistics_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_edit_wuliu_No"
            android:maxLength="15"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/text_normal_size" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_no_name_comm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_select_bar_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:button="@null"
        android:checked="false"
        android:drawableLeft="@drawable/bg_check_box_register"
        android:drawablePadding="8dp"
        android:text="@string/buyer_go_shop"
        android:textColor="@color/text_f7"
        android:textSize="@dimen/text_xlarge_size" />

    <TextView
        android:id="@+id/tv_zengsongjifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_gray_s"
        android:textSize="@dimen/text_sample_size" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_select_bar_height"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/textview_btn_comm_bg"
        android:gravity="center"
        android:text="@string/send_check"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xlarge_size" />
</LinearLayout>