<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_banner_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_homepage_height"
        android:orientation="vertical">

        <cn.net.chenbao.qbyp.view.HorizontalInnerViewPager
            android:id="@+id/vp_imgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></cn.net.chenbao.qbyp.view.HorizontalInnerViewPager>

        <cn.net.chenbao.qbyp.view.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:padding="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="vertical">

        <cn.net.chenbao.qbyp.view.HorizontalInnerViewPager
            android:id="@+id/vp_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></cn.net.chenbao.qbyp.view.HorizontalInnerViewPager>

        <cn.net.chenbao.qbyp.view.CirclePageIndicator
            android:id="@+id/category_indicator"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad0"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ad00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <View style="@style/cutline_fine_v" />

        <ImageView
            android:id="@+id/iv_ad01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View style="@style/cutline_fine" />

    <LinearLayout
        android:id="@+id/ll_ad1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ad10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <View style="@style/cutline_fine_v" />

        <ImageView
            android:id="@+id/iv_ad11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/recommend_seller"
        android:textColor="@color/gray_sub_text"
        android:textSize="@dimen/text_normal_size" />
</LinearLayout>
